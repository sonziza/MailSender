<Window x:Class="WPFTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="500" MinWidth="350" MinHeight="220">
    <DockPanel>
        <Menu DockPanel.Dock="Top" Background="#FF7BA9CA">
            <MenuItem Name="MenuFile" Header="Файл" />
            <MenuItem Name="MenuView" Header="Вид" />
            <MenuItem Name="MenuService" Header="Сервис" />
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            Fortes fortuna adiuvat
        </StatusBar>
        <TabControl>
            <TabItem Header="Тест">
                <DockPanel>
                    <DockPanel.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFDDDDDD"/>
                            <GradientStop Color="#FF5E90B4" Offset="1"/>
                        </LinearGradientBrush>
                    </DockPanel.Background>
                    <ToolBarTray DockPanel.Dock="Top">
                        <ToolBar Header="Выберите smtp-сервер">
                            <ComboBox Margin="26,0,0,0"  MinWidth="100" MaxWidth="150"></ComboBox>
                            <Button>
                                <Image  Height="12"/>
                            </Button>
                            <Button>
                                <Image Source="Media\edit.png" Height="12"/>
                            </Button>
                            <Button>
                                <Image Source="Media\remove.png" Height="12"/>
                            </Button>
                        </ToolBar>
                    </ToolBarTray>
                    <DockPanel>
                        <Label Content="Логин" Margin="10,10,10,10" HorizontalAlignment="Left" />
                        <Label Content="Почта отправителя" Margin="10,10,10,10" HorizontalAlignment="Left" />
                        <Label Content="Пароль" Margin="10,10,10,10" HorizontalAlignment="Left" />
                        <Label Content="Получатель" Margin="10,10,10,10" HorizontalAlignment="Left" />
                        <Label Content="Почта получателя" Margin="10,10,10,10" HorizontalAlignment="Left" />
                    </DockPanel>
                    <DockPanel>
                        <TextBox Name="TxtLogin" Margin="10,16,10,10"  HorizontalAlignment="Left" Text="sonziza" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                        <TextBox Name="TxtSenderMail" Margin="10,16,10,10" HorizontalAlignment="Left" Text="sonziza@yandex.ru" VerticalAlignment="Top" Width="120"/>
                        <PasswordBox Name="TxtPass" Margin="10,16,10,10" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120"/>
                        <TextBox Name="TxtRecipient" Margin="10,16,10,10" HorizontalAlignment="Left" Text="sonzizaGoogle" VerticalAlignment="Top" Width="120"/>
                        <TextBox Name="TxtRecipMail" Margin="10,18,10,10" HorizontalAlignment="Left" Text="sonziza159@gmail.com" VerticalAlignment="Top" Width="120"/>
                        <CheckBox Name="CheckSSL" Margin="10,16,10,10"  Content="Включить SSL" />
                        <Button Name="BtnSend" Margin="10,0,10,10" Content="Отправить" Click="BtnSend_Click"/>
                    </DockPanel>
                    <DockPanel>
                        <Label Content="Тема письма"></Label>
                        <TextBox Name="txtTitle" Text="Тестовое письмо"></TextBox>
                        <Label Content="Содержание"></Label>
                        <TextBox Name="txtBody" Text="Проверка на получение письма. Не отвечать на него!"  Width="200" Height="130">
                        </TextBox>
                    </DockPanel>
                </DockPanel>

